---
import Main from "@/layouts/main.astro";
import SharedLoginForm from "@/components/shared/form.astro";
import Github from "@/icons/github.astro";
---

<Main title="Sign Up">
  <section class="max-w-[55ch] mx-auto p-8">
    <SharedLoginForm
      action="/api/signup"
      method="post"
      title="Sign Up"
      description="Enter username and password to sign up."
    >
      <a
        class="flex items-center border border-black p-2 rounded-lg justify-center font-medium"
        href="/api/github"
      >
        <Github class="mr-2" />
        SIGN UP WITH GITHUB
      </a>
    </SharedLoginForm>
  </section>
</Main>

<style>
  form {
    margin-block-start: 2rem;
  }
</style>
