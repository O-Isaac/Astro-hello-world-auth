---
import type { JSX } from "astro/jsx-runtime";

interface Props {
  maxWidth: number;
  name: string;
  label: string;
  type: JSX.HTMLInputTypeAttribute;
}

const { label, maxWidth, name, type } = Astro.props;
---

<div class={`relative w-full max-w-sm min-w-[${maxWidth}px]`}>
  <label
    for="Username"
    class="relative block rounded-md border border-gray-200 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600"
  >
    <input
      type={type}
      name={name}
      class="peer border-none bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0 px-4 py-2"
      placeholder="Username"
    />

    <span
      class="pointer-events-none absolute start-2.5 top-0 -translate-y-1/2 bg-white p-0.5 text-xs text-gray-700 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-sm peer-focus:top-0 peer-focus:text-xs"
    >
      {label}
    </span>
  </label>
</div>
